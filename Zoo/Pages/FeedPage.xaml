<Page x:Class="Zoo.Pages.FeedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zoo.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      mc:Ignorable="d" Background="white"
      Width="1230" Height="800" Title="FeedPage">

    <Grid>
        <ui:TextBlock HorizontalAlignment="Left" Margin="522,0,0,0" TextWrapping="Wrap" Text="Отзывы" VerticalAlignment="Top" FontSize="30"/>
        <ui:TextBlock HorizontalAlignment="Left" Margin="95,115,0,0" TextWrapping="Wrap" Text="Nick_Name" VerticalAlignment="Top" FontSize="18" x:Name="txtUserName"/>
        <ui:TextBox x:Name="txtFend" HorizontalAlignment="Left" Height="256" Margin="105,144,0,0" TextWrapping="Wrap" Text="Введите ваш отзыв" VerticalAlignment="Top" Width="600" Grid.IsSharedSizeScope="True" MinWidth="600" MinHeight="256" MaxWidth="600" MaxHeight="256"/>
        <ui:Button Content="Отправить" Height="40" Margin="565,410,0,0" VerticalAlignment="Top" Width="140" x:Name="ButtonSend" Click="Button_Send"/>
        <ui:RatingControl x:Name="Score" Content="Оценка" Height="41" Margin="398,410,0,0" VerticalAlignment="Top" Width="162" HalfStarEnabled="False"/>


    </Grid>
</Page>
